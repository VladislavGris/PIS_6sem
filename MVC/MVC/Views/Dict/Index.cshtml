@using MVC.Models;
@{
    Layout = null;
    List<User> users = ViewBag.getAll;
    string errorMessage = ViewBag.errorMessage;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Phone numbers</h2>
    @if (!String.IsNullOrEmpty(errorMessage))
    {
        <div style="color:red">@errorMessage</div>
    }
    <table border="1">
        <caption>Phone book</caption>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (User u in users)
        {
            <tr>
                <td>@u.Name</td>
                <td>@u.Number</td>
                <td><a href="/dict/update?id=@u.Id">Update</a></td>
                <td><a href="/dict/delete?id=@u.Id">Delete</a></td>
            </tr>
        }
    </table>
    <a href="/dict/add">Add</a>
</body>
</html>
